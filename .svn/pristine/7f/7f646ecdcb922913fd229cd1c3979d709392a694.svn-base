              merc.push({"nome":soma.nome,"descricao":soma.descricao,"preco":soma.preco,"qtd":qtdProduto[soma.cod],"codProduto":soma.cod});
               // $scope.merc.push({soma,"qtd":qtdProduto[soma.cod]});


        });
        $scope.compra = merc;
        
      });

    };

