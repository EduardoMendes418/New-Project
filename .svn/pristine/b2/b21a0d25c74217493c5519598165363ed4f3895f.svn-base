// Função Remover Destino

$scope.removerDestino = function(){


  var rem = $scope.total;

  if(rem >1){

    $("#destino"+ rem).val("");
    $("#destino"+ rem).hide();
    $scope.total = rem-1;

  }
   
  if(rem <= 2 ){

  	$("#removerdestino").hide();
  }

}

