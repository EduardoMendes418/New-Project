

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
           Relatório de Clientes

        </h1>
        <ol class="breadcrumb">
            <li><a><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Relatório de Clientes</li>
        </ol>
    </section>
    
<section class="well content">

        <div class="row text-left">

             <form class="form-inline">
                       
                    <div class="form-group">
                        <label for="origem">Origem</label>
                        <select class="form-control " id="origem" ng-model="filtro.origem"  >
                            <option value="">Todos</option>                            
                            <option value="1">Site</option>
                            <option value="2">Restaurante</option>
                        </select>                      
                    </div>              
            

            <div class="form-group">            
                   
                <label for="dataInicio">De</label>
                <div class='input-group date' id='datetimepicker1'>
                <input type="text" class="form-control  datepicker"  id="dataInicio" name="dataInicio" autocomplete="off" ng-model="filtro.dataInicio">
                <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
                </span>
                </div>                                               
                
            </div>

            <div class="form-group">             

                <label for="dataInicio">Até</label>
                <div class='input-group date' id='datetimepicker1'>
                <input type="text" class="form-control datepicker"  id="dataFim" name="dataFim" autocomplete="off" ng-model="filtro.dataFim">
                <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
                </span>
                </div>                       
                        
            </div>                             
            <button type="submit" class="btn btn-primary" ng-click="listaClientes()">Pesquisar</button>
         </form>                                 
                
        </div>

        

<div class="row text-center">
    <h4 id="msn"></h4>
</div>

<div id="listaClientes" style="display: none">

<div class="table-responsive">
    
    <table class="table table-striped">
       <thead>
            <tr> 
                <th>Nome</th>                                           
                <th>Email</th>
                <th>Telefone</th>                                                                           
                <th>Endereço</th>
                <th>Data última compra</th>
                <th>Detalhe</th>                                
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="p in lista | filter:{origem:filtro.origem}" id="{{p.id}}">
                
                <td>
                    {{p.nome}}
                </td>

                <td>
                   {{p.email}}
                </td>

                <td>
                    {{p.telefone}}
                </td>

                <td>
                    {{p.endereco}}
                </td>              

                <td>
                    {{p.ultimaCompra}}
                </td>                   
                  
                <td>
                    <a>
                        <span class="glyphicon glyphicon-edit" ng-click="detalhePedidos(p)" title="Ver todas as compras"></span>
                    </a>
                </td>      
            </tr>
            
        </tbody>
           
    </table>
</div>

    <!-- Modal Detalhe Compras Cliente -->
            <div class="modal fade" id="detalheModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                        
                       </div>
                        <div class="modal-body">         

                            <div class="row">
                                <div class="col-md-12">
                                    <!-- codPdv/Nome/Descrição/Preço/qtdMin/qtdMax/Categoria -->
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th title="Código Cardápio">Codigo entrega</th>
                                                <th>Data Pedido</th>
                                                <th>Produto</th>                                                
                                                <th>Qtd</th>
                                                <th>Status</th>                                             
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="d in detalheCompra">
                                                <td>{{d.codEntrega}}</td>
                                                <td>{{d.dataPedido}}</td>
                                                <td>{{d.nome}}</td>
                                                <td>{{d.qtd}}</td>
                                                <td>
                                                    <span ng-if="d.cancelado == 0 " style="color:#0000FF">Entregue</span>
                                                    <span ng-if="d.cancelado == 1 " style="color:#FF0000">Cancelado</span>
                                                </td>                                               
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <div class="row">
                                    <div class="col-md-12 col-xs-12 col-sm-12">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                                    </div>    
                                </div>                     
                            </div>
                        </div>
                    </div>
                </div>         
            </div>

</section>

<section class="content">
    
</section>

