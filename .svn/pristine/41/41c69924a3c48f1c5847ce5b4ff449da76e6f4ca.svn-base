validarNumber = function(text){
  
  if(text){
           var patt = /[1234567890]/i;
            var res = patt.test(text);
           
           
            if(!res){
                Flash.create('danger', 'Digite um endereço válido com número.', 'large-text');
              return false;
            }else{
              return true;
            }

          }     
     
    }
